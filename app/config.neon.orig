global:
	mode: detect
	developerIp: null
	
common:
	php:
		date.timezone: Europe/Prague
		
	services:
		robotLoader:
			run: true
			
	database:
		driver: pdo_mysql
		host: ""
		dbname: ""
		user: ""
		password: ""
		charset: utf8
		driverOptions:
			1002: SET NAMES utf8
			
		proxyDir: %appDir%/proxy
		proxyNamespace: proxy
		
	smtp:
		host: smtp.gmail.com
		username: username
		password: pass
		secure: ssl

	venneDir: %libsDir%/Venne
	themesDir: %wwwDir%/themes
	flagsDir: %rootDir%/flags
	dataDir: %rootDir%/data
		
	website:
		theme: venne
		defaultPresenter: Pages:Default
		defaultErrorModule: error

	lang: cs

	admin:
		name: ""
		password: ""

	modules: []

	repositories:
		extra:
			mirrors:
				- http://localhost/venne-ng/www/repo/extra/

			name: ""
			password: ""
		
	
development < common: 
production < common: 
console < common: 
